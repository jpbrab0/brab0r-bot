                        <form action="/discord" method="post">
                            <button type="submit" class="btn btn-info">Divulgar discord do canal</button>
                        </form>
                    </div>
                </div>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Divulgar live discord</h5>
                        <form action="/divulgadiscord" method="post">
